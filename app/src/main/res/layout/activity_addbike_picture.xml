<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:backgroundTint="@color/hint_foreground_material_dark">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dotted" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="Take a Picture"
        android:textAlignment="center"
        android:backgroundTint="@color/hint_foreground_material_dark"
        android:onClick="goToCamera"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:text="Choose from Gallery"
        android:textAlignment="center"
        android:backgroundTint="@color/hint_foreground_material_dark"
        android:onClick="goToGallery"/>
</LinearLayout>